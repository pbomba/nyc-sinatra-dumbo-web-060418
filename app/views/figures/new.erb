      <% end%>

			<h2>Create new title:</h2>
			<input type="text" name="new_title">

  <h2>Landmarks</h2>
  <% @landmarks.each do |lm| %>
<input type="checkbox" value="<%= lm.name %>" name="landmarks[name]}"><label><%= lm.name %></label><br>
  <% end %>

	<!-- Year Completed: <input type="text" name="year_completed"> -->
	<input type="submit" value="submit">
</form>
</body>
</html>
